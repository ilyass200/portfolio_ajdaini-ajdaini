<body>


<header class="box">
	<nav>
		<div class="logo-container">
			<img src="./img/logo.png" width="100">
		</div>
		<ul>
			{% if not app.user %}<li class="active"><a href="{{ path('app_login') }}">SE CONNECTER</a></li>{% endif %}
			<li class="active"><a href="{{ path('index' )}}">ACCUEIL</a></li>
		</ul>
	</nav>
	
	<div class="back-img">
				<div id="contact-text">
